<robot name="arm">
    <!-- * * * LINKS * * * -->
 	<link name="base_link">
		<visual>
		    <origin xyz="0 0 0.2" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.2" length="0.4"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>
	
 	<link name="rotation_base">
		<visual>
		    <origin xyz="0 0 0.5" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.2" length="0.2"/>
			</geometry>
			<material name="Black1">
	       		<color rgba="0.2 0.2 0.2 1.0"/>
	     	</material>
		</visual>	
	</link>

    <link name="arm1">
		<visual>
		    <origin xyz="0 0 0.5" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.1 1"/>
			</geometry>
			<material name="Red">
	       		<color rgba="0.4 0 0 1.0"/>
	     	</material>
		</visual>	
	</link>
    Â´
    <link name="arm2">
		<visual>
		    <origin xyz="0 0 0.5" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.1 1"/>
			</geometry>
			<material name="Green">
	       		<color rgba="0 0.8 0 1.0"/>
	     	</material>
		</visual>	
	</link>

    <!-- * * * JOINTS * * * -->
    
 	<joint name="rotation_base_link" type="revolute">
    	<parent link="base_link"/>
    	<child link="rotation_base"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
       	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
        <axis xyz="0 0 1"/>
	</joint>

    <joint name="rotation_arm1" type="revolute">
    	<parent link="rotation_base"/>
    	<child link="arm1"/>
    	<origin xyz="0 0 0.6" rpy="0 0 0"/>
       	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
        <axis xyz="0 1 0"/>
	</joint>

    <joint name="rotation_arm2" type="revolute">
    	<parent link="arm1"/>
    	<child link="arm2"/>
    	<origin xyz="0 0 1" rpy="0 0 0"/>
       	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
        <axis xyz="0 1 0"/>
	</joint>
	
</robot>